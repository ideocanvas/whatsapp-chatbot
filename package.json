{
  "name": "whatsapp-chatbot",
  "version": "1.0.0",
  "description": "WhatsApp Chat Bot using Facebook WhatsApp API",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/server.ts",
    "dev": "ts-node src/server.ts",
    "watch": "nodemon",
    "watch:verbose": "nodemon --verbose",
    "dev:debug": "nodemon --inspect",
    "dev:mode": "DEV_MODE=true npm run watch",
    "dev:test": "ts-node src/dev-test.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "autonomous": "ts-node src/server.ts",
    "autonomous:dev": "DEV_MODE=true ts-node src/server.ts",
    "autonomous:watch": "nodemon --exec ts-node src/server.ts",
    "web:test": "ts-node src/test-autonomous.ts"
  },
  "keywords": [
    "whatsapp",
    "chatbot",
    "facebook",
    "api",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "better-sqlite3": "^12.4.6",
    "body-parser": "^1.20.2",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.4",
    "openai": "^4.20.1",
    "playwright": "^1.55.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/body-parser": "^1.19.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
