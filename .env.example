# WhatsApp Business API Configuration
WHATSAPP_ACCESS_TOKEN=your_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_VERIFY_TOKEN=your_verify_token_here
WHATSAPP_APP_SECRET=your_app_secret_here

# Server Configuration
PORT=3000
WEBHOOK_URL=https://your-domain.com/webhook
CHATBOT_NAME=Lucy

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/whatsapp_chatbot
DB_HOST=localhost
DB_PORT=5432
DB_NAME=whatsapp_chatbot
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false

# Optional: For production deployment
NODE_ENV=development

# Audio Transcription Service (Optional)
AUDIO_SERVICE_API_URL=https://api.example.com/audio/
AUDIO_SERVICE_API_KEY=your_audio_service_api_key_here

# AI Configuration File Settings
AI_CONFIG_PATH=config/ai
AI_CONFIG_FILE=default.json

# Google Custom Search API Configuration (Optional - for web search functionality)
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# Web Scraping Configuration (Optional)
WEB_SCRAPE_TIMEOUT=30000
WEB_SCRAPE_MAX_RETRIES=2
WEB_SCRAPE_RETRY_DELAY=2000
WEB_SCRAPE_NAVIGATION_TIMEOUT=15000

# Web UI Configuration
WEB_UI_USER_ID=web-ui-user

# Autonomous Agent Timing Configuration (values in milliseconds unless noted)
# Tick interval - main heartbeat of the autonomous agent (default: 60000 = 1 minute)
AUTONOMOUS_TICK_INTERVAL_MS=60000

# Maintenance interval - how often maintenance tasks run (default: 3600000 = 1 hour)
AUTONOMOUS_MAINTENANCE_INTERVAL_MS=3600000

# Batch flush interval - how many ticks between news digest flushes (default: 180 ticks = 3 hours)
AUTONOMOUS_BATCH_FLUSH_INTERVAL=180